<ul id='menu'>
  	<% Page.roots.each do |page| %>
     <li><%= link_to page.name , page , class: ("active" if @page.root == page) %></li>
    <% end %>
</ul><br/>

<ul id='submenu'>
   <% @page.children.each do |page| %>
    <li><%= link_to_unless_current	 page.name , page %>
        <%= page.children if page.children.present? %>
    </li>

   <% end %>
</ul><br/>	

<div>
  <% @page.ancestors.each do |page| %>
    <%= link_to page.name, page %> &gt;
  <% end %>
</div>
<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @page.name %>
</p>

<p>
  <b>Content:</b>
  <%= @page.content %>
</p>

<p>
  <b>Ancestry:</b>
  <%= @page.ancestry %>
</p>


<%= link_to 'Edit', edit_page_path(@page) %> |
<%= link_to 'Back', pages_path %>
